<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.timqi.collapsibletextview.CollapsibleTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22ff0000"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:textColor="#000"
                    app:collapsedLines="7"
                    app:collapsedText=" 全文"
                    app:expandedText=" 收起"
                    app:suffixColor="#0000ff"
                    app:suffixTrigger="true" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="5dp"
                android:background="#22000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/showShort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Short" />

                <Button
                    android:id="@+id/showLong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Long" />


                <Button
                    android:id="@+id/collapsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="collapsed" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/redSuffix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="red suffix" />

                <Button
                    android:id="@+id/blueSuffix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blue suffix" />

                <Button
                    android:id="@+id/expanded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="expanded" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/collapsed1line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Line" />

                <Button
                    android:id="@+id/collapsed2lines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Lines" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/suffixTrigger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="suffix trigger" />

                <Button
                    android:id="@+id/fullTextTrigger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="full text trigger" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:text="Suffix Text:"
                android:textColor="#000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#22000000" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/collapsedTextShowText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="show text" />

                <Button
                    android:id="@+id/collapsedTextShowAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="show all" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/expandedTextHide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hide" />

                <Button
                    android:id="@+id/expandedTextHideText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hide text" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
